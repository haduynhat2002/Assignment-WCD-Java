<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Category-->
    <servlet>
        <servlet-name>CreateCategory</servlet-name>
        <servlet-class>com.example.javahaduynhat.controller.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategory</servlet-name>
        <url-pattern>/admin/category/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListCategory</servlet-name>
        <servlet-class>com.example.javahaduynhat.controller.category.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategory</servlet-name>
        <url-pattern>/admin/category/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryDetail</servlet-name>
        <servlet-class>com.example.javahaduynhat.controller.category.CategoryDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryDetail</servlet-name>
        <url-pattern>/admin/category/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCategory</servlet-name>
        <servlet-class>com.example.javahaduynhat.controller.category.UpdateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategory</servlet-name>
        <url-pattern>/admin/category/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCategory</servlet-name>
        <servlet-class>com.example.javahaduynhat.controller.category.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategory</servlet-name>
        <url-pattern>/admin/category/delete</url-pattern>
    </servlet-mapping>
<!--    product   -->
    <servlet>
        <servlet-name>CreateProduct</servlet-name>
        <servlet-class>com.example.javahaduynhat.controller.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProduct</servlet-name>
        <url-pattern>/admin/product/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListProduct</servlet-name>
        <servlet-class>com.example.javahaduynhat.controller.product.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProduct</servlet-name>
        <url-pattern>/admin/product/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductDetail</servlet-name>
        <servlet-class>com.example.javahaduynhat.controller.product.ProductDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetail</servlet-name>
        <url-pattern>/admin/product/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateProduct</servlet-name>
        <servlet-class>com.example.javahaduynhat.controller.product.UpdateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProduct</servlet-name>
        <url-pattern>/admin/product/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>com.example.javahaduynhat.controller.product.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProduct</servlet-name>
        <url-pattern>/admin/product/delete</url-pattern>
    </servlet-mapping>
</web-app>